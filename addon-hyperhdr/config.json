{
  "name": "HyperHDR",
  "slug": "addon-hyperhdr",
  "version": "latest",
  "description": "HyperHDR Ambient Lighting",
  "url": "https://github.com/awawa-dev/HyperHDR",

  "image": "ghcr.io/jessica12ryan/{arch}-hyperhdr",

  "arch": ["amd64", "aarch64"],

  "startup": "services",
  "boot": "auto",
  "host_network": true,
  "init": false,

  "privileged": ["SYS_ADMIN"],

  "udev": true,

  "devices": [
    "/dev/video0",
    "/dev/video1",
    "/dev/fb0"
  ],

  "map": [
    "config:rw"
  ],

  "options": {
    "port": 8090
  },

  "schema": {
    "port": "int(1,65535)"
  },

  "webui": "http://[HOST]:[PORT:8090]"
}
