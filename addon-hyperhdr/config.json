{
  "name": "HyperHDR",
  "version": "21.0.0.0",
  "slug": "hyperhdr",
  "description": "HyperHDR is an open source ambient lighting implementation for television sets based on the video and audio streams analysis. Includes real-time HDR tone mapping and multi-threading for better performance especially for USB grabbers.",
  "url": "https://www.hyperhdr.eu/",
  "arch": ["amd64", "aarch64"],
  "startup": "application",
  "apparmor": false,
  "boot": "auto",
  "ports": {
    "8090/tcp": 8090,
    "8092/tcp": 8092,
    "19333/tcp": 19333,
    "19400/tcp": 19400,
    "19444/tcp": 19444,
    "19445/tcp": 19445
  },
  "ports_description": {
    "8090/tcp": "Web Admin",
    "8092/tcp": "SSL Web Admin",
    "19333/tcp": "Boblight Server",
    "19400/tcp": "Google Flatbuffers Receiver",
    "19444/tcp": "JSON-RPC Remote Control",
    "19445/tcp": "Protocol Buffers Server"
  },
  "map": [
    "config:rw"
  ],
  "image": "ghcr.io/jessica12ryan/hyperhdr-addon-{arch}",
  "options": {},
  "schema": {},
  "privileged": [
    "SYS_ADMIN",
    "SYS_RAWIO",
    "BPF",
    "CHECKPOINT_RESTORE",
    "DAC_READ_SEARCH",
    "IPC_LOCK",
    "NET_ADMIN", 
    "NET_RAW",
    "PERFMON",
    "SYS_MODULE",
    "SYS_NICE",
    "SYS_PTRACE",
    "SYS_RESOURCE",
    "SYS_TIME"
  ],
  "full_access": true,
  "uart": true,
  "usb": true,
  "video": true,
  "gpio": true,
  "devices": [
    "/dev/spidev0.0",
    "/dev/vchiq",
    "/dev/amvideo",
    "/dev/fb0",
    "/dev/mem"
  ],
  "webui": "http://[HOST]:[PORT:8090]",
  "init": true,
  "host_network": false
}
