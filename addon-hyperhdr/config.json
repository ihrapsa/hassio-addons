{
  "name": "HyperHDR",
  "slug": "addon-hyperhdr",
  "version": "latest",
  "description": "HyperHDR Ambient Lighting",
  "url": "https://github.com/awawa-dev/HyperHDR",

  "image": "ghcr.io/jessica12ryan/{arch}-hyperhdr",

  "arch": ["amd64", "aarch64"],

  "startup": "services",
  "apparmor": false,
  "boot": "auto",
  "init": false,

  "privileged": [
    "SYS_ADMIN",
    "SYS_RAWIO"
  ],

  "udev": true,
  "uart": true,
  "usb": true,
  "video": true,
  "gpio": true,
  
  "devices": [
    "/dev/video0",
    "/dev/video1",
    "/dev/fb0",
    "/dev/spidev0.0",
    "/dev/vchiq",
    "/dev/amvideo",
    "/dev/mem"
  ],

  "map": [
    "config:rw"
  ],

  "options": {
    "port": 8090
  },

  "schema": {
    "port": "int(1,65535)"
  },

  "webui": "http://[HOST]:[PORT:8090]"
}
