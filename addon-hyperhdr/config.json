{
  "name": "HyperHDR",
  "slug": "addon-hyperhdr",
  "version": "2026.1",
  "description": "HyperHDR Ambient Lighting",
  "url": "https://github.com/awawa-dev/HyperHDR",

  "image": "ghcr.io/jessica12ryan/{arch}-hyperhdr:latest",

  "arch": ["amd64", "aarch64"],

  "startup": "services",
  "boot": "auto",
  "init": false,

  "ports": {
    "8090/tcp": 8090,
    "8092/tcp": null,
    "19333/tcp": 19333,
    "19400/tcp": 19400,
    "19444/tcp": 19444,
    "19445/tcp": 19445
  },

  "privileged": [
    "SYS_ADMIN",
    "SYS_RAWIO"
  ],

  "udev": true,
  "uart": true,
  "usb": true,
  "video": true,
  "gpio": true,
  
  "devices": [
    "/dev/video0",
    "/dev/video1",
    "/dev/fb0",
    "/dev/spidev0.0",
    "/dev/vchiq",
    "/dev/amvideo",
    "/dev/mem"
  ],

  "map": [
    "config:rw"
  ],

  "options": {},

  "schema": {},

  "webui": "http://[HOST]:[PORT:8090]"
}
